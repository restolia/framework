{
  "name": "restolia/framework",
  "require": {
    "php": "^8.0",
    "symfony/http-foundation": "^5.3",
    "php-di/php-di": "^6.3",
    "psr/log": "^3.0",
    "monolog/monolog": "^2.3",
    "nikic/fast-route": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "Restolia\\": "src/Restolia"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "prefer-stable": true,
  "require-dev": {
    "phpstan/phpstan": "^0.12.99",
    "phpunit/phpunit": "^9.5"
  },
  "scripts": {
    "analsys": "./vendor/bin/phpstan analyse --level 8 src tests",
    "tests": "./vendor/bin/phpunit --testdox",
    "all": [
      "@analsys",
      "@tests"
    ]
  }
}
